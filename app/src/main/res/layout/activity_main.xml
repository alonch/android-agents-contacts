<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true">

        <ListView
            android:layout_width="250dp"
            android:layout_height="fill_parent"
            android:id="@+id/agentsList"
            android:layout_gravity="left|center_vertical" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/display"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                android:src="@drawable/profile" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="First Name:"
                android:id="@+id/firstLabel"
                android:layout_alignParentTop="true"
                android:layout_toEndOf="@+id/display"
                android:layout_toLeftOf="@+id/first"
                android:gravity="right"
                android:paddingRight="10dp"
                android:paddingTop="50dp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Large Text"
                android:id="@+id/first"
                android:layout_alignParentTop="true"
                android:layout_toLeftOf="@+id/id"
                android:width="300dp"
                android:paddingTop="50dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="0"
                android:id="@+id/id"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:width="50dp"
                android:paddingTop="15dp"
                android:paddingRight="15dp"
                android:gravity="right" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Last Name:"
                android:id="@+id/lastLabel"
                android:layout_below="@+id/firstLabel"
                android:layout_toEndOf="@+id/display"
                android:layout_toLeftOf="@+id/last"
                android:gravity="right"
                android:paddingRight="10dp"
                android:paddingTop="50dp"
                android:textIsSelectable="false"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Large Text"
                android:id="@+id/last"
                android:layout_below="@+id/first"
                android:layout_alignParentEnd="true"
                android:width="350dp"
                android:paddingTop="50dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Phone:"
                android:id="@+id/phoneLabel"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/display"
                android:layout_alignEnd="@+id/display"
                android:textStyle="bold"
                android:gravity="right"
                android:paddingTop="50dp"
                android:paddingRight="10dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Large Text"
                android:id="@+id/phone"
                android:layout_below="@+id/display"
                android:layout_alignStart="@+id/lastLabel"
                android:layout_alignParentEnd="true"
                android:paddingTop="50dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Mail:"
                android:id="@+id/mailLabel"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/phoneLabel"
                android:layout_alignEnd="@+id/display"
                android:textStyle="bold"
                android:gravity="right"
                android:paddingTop="50dp"
                android:paddingRight="10dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Large Text"
                android:id="@+id/mail"
                android:layout_below="@+id/phone"
                android:layout_alignStart="@+id/lastLabel"
                android:layout_alignParentEnd="true"
                android:paddingTop="50dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Address:"
                android:id="@+id/addressLabel"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/mailLabel"
                android:layout_alignEnd="@+id/display"
                android:textStyle="bold"
                android:gravity="right"
                android:paddingTop="50dp"
                android:paddingRight="10dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Large Text"
                android:id="@+id/address"
                android:layout_below="@+id/mail"
                android:layout_alignStart="@+id/lastLabel"
                android:layout_alignParentEnd="true"
                android:paddingTop="50dp" />



        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>
